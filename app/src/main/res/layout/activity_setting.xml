<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yunjeong.project1.SettingActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_addcard_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:layout_marginBottom="16dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Update"
        android:id="@+id/updateTitle"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="6dp" />

    <LinearLayout
        android:id="@+id/updateinfoLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/border"
        android:outlineProvider="bounds"
        android:onClick="onClick">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Update Info"
            android:id="@+id/updateinfoTitle"
            android:textSize="20dp"
            android:layout_marginLeft="18dp"
            android:layout_weight="8"
            android:layout_marginTop="16dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgUpdateinfo"
            android:src="@drawable/next24"
            android:layout_weight="2"
            android:layout_marginTop="16dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="SESSION"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="6dp"
        android:id="@+id/textView"
        android:layout_marginTop="6dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="48dp"
        android:id="@+id/logoutLayout"
        android:background="@drawable/border"
        android:outlineProvider="bounds"
        android:onClick="onClick">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Log out"
            android:id="@+id/logoutTitle"
            android:textSize="20dp"
            android:layout_marginLeft="18dp"
            android:layout_weight="8"
            android:layout_marginTop="16dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imglogout"
            android:src="@drawable/next24"
            android:layout_weight="2"
            android:layout_marginTop="16dp" />
    </LinearLayout>

</LinearLayout>
