<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="350dp"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ticket id"
        android:textSize="20dp"
        android:id="@+id/tvDTicketD"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:textColor="#f23030"
        android:textIsSelectable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="date"
        android:id="@+id/tvDDate"
        android:textColor="#514d4d"
        android:textSize="25sp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="name"
            android:id="@+id/tvDName"
            android:layout_marginTop="32dp"
            android:textSize="30dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="location"
            android:id="@+id/tvDLocation"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="seat"
            android:id="@+id/tvDSeatInfo"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6dp"
            android:textColor="#ea5454" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:gravity="center|bottom"
        android:layout_weight="1">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/my_seat_find"
            android:id="@+id/btn_search_seat"
            android:background="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:textColor="#000000"
            android:layout_marginBottom="6dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="닫기"
            android:background="@color/white"
            android:textColor="#000000"
            android:id="@+id/btn_close"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

</LinearLayout>